@model IEnumerable<BookReviewMVC2018_VersionB.Models.Book>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Book Reviews</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
   <table class="table">
       <tr>
           <th>@Html.DisplayNameFor(model => model.BookTitle)</th>
           <th>@Html.DisplayNameFor(model => model.BookISBN)</th>
           <th>@Html.DisplayNameFor(model => model.BookEntryDate)</th>
       </tr>
       @foreach(var item in Model)
       {
       <tr>
           <td>@Html.DisplayFor(model => item.BookTitle)</td>
           <td>@Html.DisplayFor(model => item.BookISBN)</td>
           <td>@Html.DisplayFor(model => item.BookEntryDate)</td>
       </tr>
       }
   </table>
</div>